@model Repairly.Models.ReportDataViewModel;
<div class="container-fluid">
    <div class="row p-3">
        <div class="card shadow-sm">
            <div class="card-body row">
               

               
                    <div class="col-md-3">
                        <label for="startDate" class="form-label">วันที่เริ่มต้น</label>
                        <input type="date" class="form-control" id="startDate" name="startDate">
                    </div>
                    <div class="col-md-3">
                        <label for="endDate" class="form-label">วันที่สิ้นสุด</label>
                        <input type="date" class="form-control" id="endDate" name="endDate">
                    </div>
                    <div class="col-md-3">
                    <label for="status" class="form-label">สถานะ</label>
                        <select class="form-select" asp-items="ViewBag.Status" id="status"> </select>
                    </div>
                    <div class="col-md-3">
                    <label for="category" class="form-label">ประเภท</label>
                        <select class="form-select" asp-items="ViewBag.Category" id="category"></select>
                    </div>

                  
              
            </div>
        </div>
    </div>
    <form method="get" action="/Report/ExportPdf" target="_blank" id="pdfForm" class="d-lg-flex justify-content-end me-2">
        <input type="hidden" name="startDate" id="pdfStartDate" />
        <input type="hidden" name="endDate" id="pdfEndDate" />
        <input type="hidden" name="status" id="pdfStatus" />
        <input type="hidden" name="category" id="pdfCategory" />
        <button type="submit" class="btn btn-success d-flex align-items-center gap-2 shadow-sm px-3 py-1">
            <i class="bi bi-file-earmark-pdf-fill fs-6"></i>
            <span class="fw-semibold small">PDF</span>
        </button>
    </form>
    <div id="reportResult">
        <partial name="TableReport" />
    </div>
  
</div>



<script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>

<script>

    function search(){
        const startDate = $("#startDate").val()
        const endDate = $("#endDate").val()
        const Status = $("#status").val()
        const Category = $("#category").val()
       $("#pdfStartDate").val(startDate);
        $("#pdfEndDate").val(endDate);
        $("#pdfStatus").val(Status);
        $("#pdfCategory").val(Category);
        $.ajax({
            url:"/Report/SearchReport",
            type:"GET",
            data:{
                startDate:startDate,
                endDate:endDate,
                Status:Status,
                Category:Category,
            },
            success:function(result){
                  $("#reportResult").html(result);
                  updateMonthDisplay();
            }
        })
    }
    $("#startDate").on("change",search)
    $("#endDate").on("change",search)
    $("#status").on("change",search)
    $("#category").on("change",search)

</script>





<script>
    function updateMonthDisplay() {
      const start = document.getElementById("startDate").value;
      const end = document.getElementById("endDate").value;

      if (start && end) {
        const startDate = new Date(start );
        const endDate = new Date(end );

        const thaiMonths = [
          "มกราคม", "กุมภาพันธ์", "มีนาคม", "เมษายน", "พฤษภาคม", "มิถุนายน",
          "กรกฎาคม", "สิงหาคม", "กันยายน", "ตุลาคม", "พฤศจิกายน", "ธันวาคม"
        ];

        const startText = `${thaiMonths[startDate.getMonth()]} ${startDate.getFullYear() + 543}`;
        const endText = `${thaiMonths[endDate.getMonth()]} ${endDate.getFullYear() + 543}`;

        document.getElementById("monthDisplay").innerText = `เดือน: ${startText} – ${endText}`;
      }
    }
 

</script>



