<form method="post" asp-action="CreateCate">
    <div class="modal fade" id="AddCardCate" tabindex="-1" aria-labelledby="AddCardCateLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content rounded-4 shadow">
                <div class="modal-header bg-white border-bottom-0 px-4 py-3">
                    <h5 class="modal-title fw-semibold" id="AddCardCateLabel">เพิ่มรายการใหม่</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body px-4 py-4">
                    <div class="row g-3">
                        <div class="col-12">
                            <label for="category" class="form-label fw-medium">ประเภท</label>
                            <input type="text" id="category" name="name" class="form-control rounded-3" placeholder="เพิ่มประเภท" required />
                        </div>
                    </div>
                </div>

                <div class="modal-footer  border-top-0 px-4 py-3">
                    <button type="button" class="btn btn-outline-secondary  px-4" data-bs-dismiss="modal">ยกเลิก</button>
                    <button type="submit" class="btn btn-primary  px-4">
                        บันทึก
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>