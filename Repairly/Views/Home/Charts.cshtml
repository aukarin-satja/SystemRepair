@model DashboardViewModel
<div class="row mt-2 g-2 ">

    <div class="col-12 col-md-3">

        <div class="card shadow-sm border-0 rounded-4 p-3">
            <div class="card-body d-flex align-items-center gap-3">

                <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width:56px; height:56px;">
                    <i class="bi bi-file-earmark-text fs-5 text-primary"></i>
                </div>

                <div>
                    <h6 class="text-muted mb-1">รายการซ่อมทั้งหมด</h6>
                    <p class="fw-semibold mb-0 small">@Model.Total รายการ</p>
                </div>

            </div>
        </div>
    </div>
    <div class="col-12 col-md-3">

        <div class="card shadow-sm border-0 rounded-4 p-3">
            <div class="card-body d-flex align-items-center gap-3">

                <div class="bg-warning bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width:56px; height:56px;">
                    <i class="bi bi-hourglass-bottom fs-5 text-warning"></i>
                </div>

                <div>
                    <h6 class="text-muted mb-1">รอดำเนินการ</h6>
                    <p class="fw-semibold mb-0 small">@Model.Wait รายการ</p>
                </div>

            </div>
        </div>
    </div>
    <div class="col-12 col-md-3">

        <div class="card shadow-sm border-0 rounded-4 p-3">
            <div class="card-body d-flex align-items-center gap-3">

                <div class="bg-info bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width:56px; height:56px;">
                    <i class="bi bi-tools fs-5 text-info"></i>
                </div>

                <div>
                    <h6 class="text-muted mb-1">กำลังดำเนินการ</h6>
                    <p class="fw-semibold mb-0 small">@Model.Active รายการ</p>
                </div>

            </div>
        </div>
    </div>
    <div class="col-12 col-md-3">

        <div class="card shadow-sm border-0 rounded-4 p-3">
            <div class="card-body d-flex align-items-center gap-3">

                <div class="bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width:56px; height:56px;">
                    <i class="bi bi-check-circle-fill fs-5 text-success"></i>
                </div>

                <div>
                    <h6 class="text-muted mb-1">เสร็จสิ้นแล้ว</h6>
                    <p class="fw-semibold mb-0 small">@Model.Success รายการ</p>
                </div>

            </div>
        </div>
    </div>



    <div class="col-12 col-md-6">

        <div class="card mt-2 shadow-sm border-0  " style="height:400px">
            <div class="card-header bg-white border-bottom text-center py-3">
                <h6 class="mb-0 fw-semibold text-muted">อุปกรณ์ที่เสียบ่อย</h6>
            </div>

            <div class="card-body">
                <canvas id="DonutChart"></canvas>
            </div>

        </div>
    </div>

    <div class="col-12 col-md-6">

        <div class="card mt-2 shadow-sm border-0  " style="height:400px">
            <div class="card-body">
                <canvas id="monthChart" style="width:100%; height:100%"></canvas>

            </div>

        </div>
    </div>


</div>